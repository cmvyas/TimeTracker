{
  "manifest_version": 3,
  "name": "Time Tracker Extension",
  "version": "1.0",
  "description": "Track time and view weekly data.",
  "permissions": [
      "storage",
      "tabs"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_popup": "index.html",
      "default_icon": {
          "16": "icon.png",
          "48": "icon.png",
          "128": "icon.png"
      }
  },
  "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
  },
  "content_security_policy": {
    "script-src": "'self' 'wasm-unsafe-eval' 'inline-speculation-rules' https://cdn.jsdelivr.net",
    "object-src": "'self'"
  }
}
